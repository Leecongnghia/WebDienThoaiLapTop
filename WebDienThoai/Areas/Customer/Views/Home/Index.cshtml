@model List<SanPham>
@{ ViewData["Title"] = "Home Page"; }
<link href="~/css/pagination.css" rel="stylesheet" />
<!-- SECTION -->
<div class="section">
    <div class="row">
        <!-- shop -->
        <div class="col-md-4 col-xs-6">
            <div class="shop">
                <div class="shop-img">
                    <img style="height:180px" src="/images/manager/slide/banner-tgdd-800x300.jpg" alt="Laptop Collection">
                </div>
                <div class="shop-body">
                    <h3>Laptop<br>Collection</h3>
                    <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- /shop -->

        <div class="col-md-4 col-xs-6">
            <div class="shop">
                <div class="shop-img">
                    <img style="height:180px" src="/images/manager/slide/sl-iphone-14-promax.jpg" alt="Accessories Collection">
                </div>
                <div class="shop-body">
                    <h3>Accessories<br>Collection</h3>
                    <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- /shop -->

        <div class="col-md-4 col-xs-6">
            <div class="shop">
                <div class="shop-img">
                    <img style="height:180px" src="/images/manager/slide/thietkehaithanh-banner-1-1.jpg" alt="Cameras Collection">
                </div>
                <div class="shop-body">
                    <h3>Cameras<br>Collection</h3>
                    <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- /shop -->
    </div>
</div>

<!-- SECTION -->
<div class="section">
    <div class="row">
        <div id="aside" class="col-md-3">
            <div class="aside">
                <h3 class="aside-title">Sản Phẩm Mới </h3>
                @foreach (var p in Model.Where(p => p.donGia > 15000000))
                {
                    <div class="product-widget">
                        <div class="product-img">
                            <img src="/images/manager/sanpham/@p.Hinh" alt="@p.TieuDe">
                        </div>
                        <div class="product-body">
                            <p class="product-category">@p.LoaiSanPham.Ten</p>
                            <h3 class="product-name"><a href="#">@p.TieuDe</a></h3>
                            <h4 class="product-price">@Html.FormatValue(p.donGia, "{0:#,##0}VNĐ")</h4>
                        </div>
                    </div>
                }
            </div>

            <div class="aside">
                <h3 class="aside-title">Sản Phẩm Nổi bật</h3>
                @foreach (var p in Model.Where(p => p.NoiBat == 1))
                {
                    <div class="product-widget">
                        <div class="product-img">
                            <img src="/images/manager/sanpham/@p.Hinh" alt="@p.TieuDe">
                        </div>
                        <div class="product-body">
                            <p class="product-category">@p.LoaiSanPham.Ten</p>
                            <h3 class="product-name"><a href="#">@p.TieuDe</a></h3>
                            <h4 class="product-price">@Html.FormatValue(p.donGia, "{0:#,##0}VNĐ")</h4>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div id="store" class="col-md-9">
            <div class="store-filter clearfix">
                <div class="store-sort">
                    <label>
                        Sort By:
                        <select class="input-select">
                            <option value="0">Popular</option>
                            <option value="1">Position</option>
                        </select>
                    </label>

                    <label>
                        Show:
                        <select class="input-select">
                            <option value="0">20</option>
                            <option value="1">50</option>
                        </select>
                    </label>
                </div>
                <ul class="store-grid">
                    <li class="active"><i class="fa fa-th"></i></li>
                    <li><a href="#"><i class="fa fa-th-list"></i></a></li>
                </ul>
            </div>

            <div class="row">
                @foreach (var p in Model)
                {
                    <div class="col-md-4 col-xs-6" style="height:300px;width:280px;margin-bottom:20px;">
                        <div class="product">
                            <div class="product-img text-center">
                                <img style="height:200px;width:150px" src="/images/manager/sanpham/@p.Hinh" alt="@p.TieuDe">
                                <div class="product-label">
                                    <span class="new">NEW</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">@p.LoaiSanPham.Ten</p>
                                <h3 class="product-name"><a href="#">@p.TieuDe</a></h3>
                                <h4 class="product-price">@Html.FormatValue(p.donGia, "{0:#,##0}VNĐ")</h4>
                            </div>
                            <div class="add-to-cart">
                                <a class="addtocart add-to-cart-btn" data-sanPhamId="@p.Id" asp-controller="Cart" asp-action="AddToCart" asp-route-sanPhamId="@p.Id">Thêm Giỏ Hàng</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix visible-sm visible-xs"></div>
            </div>

            <div class="store-filter clearfix mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.pageIndex == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="1">&laquo;</a>
                    </li>
                    @for (var i = 1; i <= ViewBag.pageSum; i++)
                    {
                        <li class="page-item @(ViewBag.pageIndex == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.pageIndex == ViewBag.pageSum ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.pageSum">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
