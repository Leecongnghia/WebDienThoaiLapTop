@model Order
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-8 mb-4">
                <!-- Checkout -->
                <form asp-action="ProcessOrder" method="post">
                    <div class="card shadow-0 border">
                        <div class="p-4">
                            <h5 class="card-title mb-3">Thông Tin Thanh Toán</h5>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <p class="mb-0">Tên</p>
                                    <div class="form-outline">
                                        <input type="text" asp-for="CustomerName" placeholder="Nhập Tên Khách Hàng"
                                               class="form-control" />
                                        <span class="text-danger" asp-validation-for="CustomerName"></span>
                                    </div>

                                </div>
                                <div class="col-6 mb-3">
                                    <p class="mb-0">Số Điện Thoại</p>
                                    <div class="form-outline">
                                        <input type="text" asp-for="Phone" value="" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Phone"></span>
                                    </div>
                                </div>
                                <div class="col-6 mb-3">
                                    <p class="mb-0">Địa Chỉ</p>
                                    <div class="form-outline">
                                        <input type="text" asp-for="Address" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Address"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="float-end">
                                <button class="btn btn-light border">Cancel</button>
                                <button type="submit" class="btn btn-success shadow-0 border">Continue</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- Checkout -->
            </div>
            @{
                var cart = (Cart)ViewBag.CART;
            }
        <div class="col-xl-4 col-lg-4 d-flex justify-content-center justify-content-lg-end ">
            
                <div class="section-title text-center">
                    <h3 class="title">Chi Tiết</h3>
                </div>
                <div class="order-summary">
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Tổng Giá:</p>
                        <p class="mb-2">@string.Format("{0:#,##0}VNĐ", cart.Total)</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Giảm Giá:</p>
                        <p class="mb-2 text-danger">- $0</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Phí Vận Chuyển:</p>
                        <p class="mb-2">+ $0</p>
                    </div>
                    <h6 class="text-dark my-4">Sản Phẩm</h6>
                    @foreach (var item in cart.Items)
                    {
                        <div class="d-flex align-items-center mb-4">
                            <div class="me-3 position-relative">
                                <span class="position-absolute top-0 start-100 translate-middle badge bg-dark text-white ms-1
rounded-pill">
                                    @item.Quantity
                                </span>
                                <img src="/images/manager/sanpham/@item.SanPham.Hinh" style="height: 96px; width: 96px;" class="img-sm rounded
border" />
                            </div>
                            <div class="">
                                <a href="#" class="nav-link">
                                    @item.SanPham.TieuDe <br />
                                </a>
                                <div class="price text-muted">Total: @(item.Quantity*item.SanPham.donGia)</div>
                            </div>
                        </div>
                    }
                    <hr />
                   
                </div>
                
            </div>
        </div>
    </div>
</section>