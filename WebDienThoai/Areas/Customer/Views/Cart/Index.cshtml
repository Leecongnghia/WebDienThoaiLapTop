@model Cart
<!-- SECTION -->
<div class="section">
        <!-- row -->
        <div class="row">

            <div class="col-md-8">
                <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">GIỎ HÀNG</h3>
                    </div>

                    @foreach (var item in Model.Items)
                    {
                        <form asp-action="Update" asp-controller="Cart">
                            <div class="row gy-3 mb-4">
                                <div class="col-lg-5">
                                    <div class="me-lg-5">
                                        <div class="d-flex">
                                            <img src="/images/manager/sanpham/@item.SanPham.Hinh" class="border rounded me-3" style="width: 96px; height: 96px;" />
                                            <div class="">
                                                <a href="#" class="nav-link">@item.SanPham.TieuDe</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-6 col-6 d-flex flex-row flex-lg-column flex-xl-row text-nowrap">
                                    <div class="col-sm-6">
                                        <input type="text" name="qty" value="@item.Quantity" class="form-control" />
                                    </div>
                                    <div class="">
                                        <text class="h6">@string.Format("{0:#,##0}VNĐ", item.SanPham.donGia)</text> 
                                    </div>
                                </div>
                                <div class="col-lg col-sm-6 d-flex justify-content-sm-center justify-content-md-start justify-content-lg-center justify-content-xl-end mb-2">
                                    <div class="float-md-end">
                                        <button asp-controller="Cart" asp-action="Update" asp-route-sanPhamId="@item.SanPham.Id" class="btn btn-light border text-danger icon-hover-danger"> Update</button>
                                        <button asp-controller="Cart" asp-action="Remove" asp-route-sanPhamId="@item.SanPham.Id" class="btn btn-light border text-danger icon-hover-danger"> Remove</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        }
                </div>
                <!-- /Billing Details -->
            </div>
            <!-- Order Details -->
            <div class="col-md-4 order-details">
                <div class="section-title text-center">
                    <h3 class="title">Your Order</h3>
                </div>
                <div class="order-summary">
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Total price:</p>
                        <p class="mb-2">@string.Format("{0:#,##0}VNĐ", Model.Total)</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">Discount:</p>
                        <p class="mb-2 text-success">-$0</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p class="mb-2">TAX:</p>
                        <p class="mb-2">$0.00</p>
                    </div>
                    <hr />
                    <div class="order-col">
                        <div><strong>TOTAL</strong></div>
                        <div><strong class="order-total">@string.Format("{0:#,##0}VNĐ", Model.Total)</strong></div>
                    </div>
                </div>

                <a href="/Customer/order/index" class="primary-btn order-submit">Đặt Hàng</a>
                <a href="/Customer/home/index" class="btn btn-light w-100 border mt-2"> Back to shop </a>
            </div>
            <!-- /Order Details -->
        </div>
        <!-- /row -->
</div>
<!-- /SECTION -->
