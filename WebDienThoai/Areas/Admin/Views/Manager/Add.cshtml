@model SanPham
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <h2>THÊM SẢN PHẨM</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group pb-2">
                <label>Tiêu Đề</label>
                <input asp-for="TieuDe" class="form-control" />
                <span asp-validation-for="TieuDe" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label>Loại Sản Phẩm</label>

                <select asp-for="LoaiSanPhamId" asp-items="@ViewBag.LoaiSanPhamList" class="form-
control">

                    <option disabled selected>===Chọn Loại Sản phẩm===</option>
                </select>
                <span asp-validation-for="LoaiSanPhamId" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label>Giá</label>
                <input asp-for="donGia" class="form-control" />
                <span asp-validation-for="donGia" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label>Nội Dung</label>
                <textarea asp-for="NoiDung" class="form-control"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            

            <div class="form-group pb-2">
                <label>Hình</label>
                <input asp-for="Hinh" type="file" class="form-control" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"> Lưu </button>
    <a asp-action="Index" class="btn btn-secondary">Trở Lại</a>
</form>